.SUFFIXES: .f90

FC = gfortran

#FFLAGS = -O2 -pg -fcheck=bounds
FFLAGS = -O2 

#LINK = -pg -static
LINK = -static

OBJS = kind_mod.o       \
       matrix_mod.o     \
       ions_mod.o       \
       options_mod.o    \
       charge_mod.o     \
       chgcar_mod.o     \
       cube_mod.o       \
       io_mod.o         \
       bader_mod.o      \
       voronoi_mod.o    \
       multipole_mod.o  \
       weight_mod.o     \
       dsyevj3_mod.o    \
       jacobi_mod.o     \
       critpoint_mod.o  \
       automatedcp_mod.o


%.o %.mod : %.f90
	$(FC) $(FFLAGS) -c $*.f90

bader: $(OBJS) main.o
	rm -f bader
	$(FC) $(LINK) main.o -o $@ $(OBJS) 

dist: bader
	tar -cf bader_osx_gfortran.tar bader
	gzip -9 bader_osx_gfortran.tar

clean:
	rm -f *.o *.mod bader bader_osx_gfortran.tar.gz
